# --------------------
# Universal statements
# --------------------

PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX log: <http://www.w3.org/2000/10/swap/log#>
PREFIX lingua: <http://www.w3.org/2000/10/swap/lingua#>
PREFIX var: <http://www.w3.org/2000/10/swap/var#>
PREFIX : <#>

# \Every x: type(x, Resource
_:bng_1 lingua:backward true.

GRAPH _:bng_1 {
    var:X a rdfs:Resource.
}

# Everybody loves somebody who is lonely
_:bng_2 lingua:backward _:bng_3.

GRAPH _:bng_2 {
    var:A :loves var:B.
}

GRAPH _:bng_3 {
    (var:A) log:skolem var:B.
}

_:bng_4 lingua:backward _:bng_5.

GRAPH _:bng_4 {
    var:B :is :lonely.
}

GRAPH _:bng_5 {
    (var:A) log:skolem var:B.
}

# queries
_:bng_6 lingua:answer _:bng_6.

GRAPH _:bng_6 {
    :pat a rdfs:Resource.
}

_:bng_7 lingua:answer _:bng_7.

GRAPH _:bng_7 {
    :bob :loves var:X.
    var:X :is :lonely.
}
