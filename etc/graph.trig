# ----------------------
# Traversing graph paths
# ----------------------
#
# Examples of graph based reasoning.

PREFIX lingua: <http://www.w3.org/2000/10/swap/lingua#>
PREFIX var: <http://www.w3.org/2000/10/swap/var#>
PREFIX : <#>

# French roads
:paris :oneway :orleans.
:paris :oneway :chartres.
:paris :oneway :amiens.
:orleans :oneway :blois.
:orleans :oneway :bourges.
:blois :oneway :tours.
:chartres :oneway :lemans.
:lemans :oneway :angers.
:lemans :oneway :tours.
:angers :oneway :nantes.

# oneway subproperty of path
_:bng_1 lingua:forward _:bng_2.

GRAPH _:bng_1 {
    var:A :oneway var:B.
}

GRAPH _:bng_2 {
    var:A :path var:B.
}

# path transitive property
_:bng_3 lingua:forward _:bng_4.

GRAPH _:bng_3 {
    var:A :path var:B.
    var:B :path var:C.
}

GRAPH _:bng_4 {
    var:A :path var:C.
 }

# query
_:bng_5 lingua:answer _:bng_5.

GRAPH _:bng_5 {
    var:A :path :nantes.
}
